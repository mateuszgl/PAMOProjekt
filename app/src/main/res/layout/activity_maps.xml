<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/maps_activity_search_text"
            android:inputType="text"
            android:layout_width="228dp"
            android:layout_height="50dp"
            android:hint="@string/search_location_hint"
            />

        <Button
            android:id="@+id/search_location_button"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@string/search_button" />
        <Button
            android:id="@+id/save_location_button"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@string/save_button" />
    </LinearLayout>


    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.mateusz.lab1.com.example.mateusz.pamo.MapsActivity" />

</LinearLayout>