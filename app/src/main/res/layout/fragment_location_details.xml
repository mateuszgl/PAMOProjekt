<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context="com.example.pamo.LocationDetailsFragment">

    <TextView
        android:id="@+id/location_details_activity_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/empty_string"
        android:textSize="25sp"
        tools:layout_editor_absoluteX="143dp"
        tools:layout_editor_absoluteY="157dp" />
    <TextView
        android:id="@+id/location_details_activity_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/empty_string"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="143dp"
        tools:layout_editor_absoluteY="157dp" />

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.mateusz.lab1.com.example.mateusz.pamo.LocationDetailsActivity" />


</LinearLayout>