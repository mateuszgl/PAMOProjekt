<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pamo.MainActivity">

    <TextView
        android:id="@+id/main_activity_text_view"
        android:text="@string/search_location_label" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp" />

    <EditText
        android:id="@+id/main_activity_edit_text"
        android:layout_width="200px"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/main_activity_text_view"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/change_text_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search_button"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/main_activity_edit_text"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/maps_activity_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/maps_activity_button"
        android:layout_above="@+id/list_view_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="41dp" />

    <Button
        android:id="@+id/list_view_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Launch list view"
        android:layout_marginBottom="132dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
